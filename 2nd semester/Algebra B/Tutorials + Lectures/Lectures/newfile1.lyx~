\begin_layout Proof
יהי 
\begin_inset Formula $v\in W$
\end_inset

.
 לפי המשפט הקודם ידוע כי 
\begin_inset Formula $V=U\oplus W$
\end_inset

.
 
\begin_inset Formula $P$
\end_inset

הטלה לכן
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
P^{2}=P\Rightarrow P^{2}(v)-P(v)=0\Rightarrow P(P(v)-v)=0\Rightarrow P(v)-v\in KerP=U
\]

\end_inset


\end_layout

\begin_layout Proof
אך מצד שני, 
\begin_inset Formula 
\[
P(v)-v\in W=ImP
\]

\end_inset

מאחר ו
\begin_inset Formula $U\bigcap W=\{0\}$
\end_inset

אז נקבל 
\begin_inset Formula $P(v)-v=0\Rightarrow P(v)=v$
\end_inset

.
\end_layout

