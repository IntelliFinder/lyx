\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{align*}
P(v_{1}) & =v_{1}\\
P(v_{2}) & =v_{2}\\
. & .\\
P(v_{k}) & =1\\
. & .\\
P(u_{1}) & =0\\
. & .\\
P(u_{n-k}) & =0
\end{align*}

\end_inset


\end_layout

\begin_layout Proof
נקבל כי
\begin_inset Formula $\left\{ \right\} $
\end_inset


\begin_inset Formula 
