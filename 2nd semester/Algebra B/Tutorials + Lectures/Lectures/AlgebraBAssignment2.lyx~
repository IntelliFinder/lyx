\begin_inset Formula 
\begin{align*}
dim\left(\stackrel[k\neq i]{}{\sum}ImP_{k}\right)\underbrace{=}_{direct-sum}\stackrel[k\neq i]{}{\sum}dim\left(ImP_{k}\right) & =\stackrel[k=1]{n}{\sum}dim\left(ImP_{k}\right)-ImP_{i}\\
=dimV-dimImP_{i}\underbrace{=}_{dimension-theorem}dimKerP_{i}\\
\end{align*}

