\begin_layout Standard
לכן,
\begin_inset Formula 
\begin{align*}
P_{1} & =\phi_{1}(T)=\stackrel[i\neq k]{}{\prod}\frac{\left(\begin{array}{cccc}
2 & 0 & 0 & 0\\
0 & 0 & 2 & 0\\
0 & 2 & 0 & 0\\
0 & 0 & 0 & 2
\end{array}\right)-\lambda_{k}\mathbb{I}_{4\times4}}{\lambda_{1}-\lambda_{k}}=\frac{\left(\begin{array}{cccc}
2 & 0 & 0 & 0\\
0 & 0 & 2 & 0\\
0 & 2 & 0 & 0\\
0 & 0 & 0 & 2
\end{array}\right)-\lambda_{2}\mathbb{I}_{4\times4}}{\lambda_{1}-\lambda_{2}}\\
 & =\frac{\left(\begin{array}{cccc}
2 & 0 & 0 & 0\\
0 & 0 & 2 & 0\\
0 & 2 & 0 & 0\\
0 & 0 & 0 & 2
\end{array}\right)-\left(\begin{array}{cccc}
-2 & 0 & 0 & 0\\
0 & -2 & 0 & 0\\
0 & 0 & -2 & 0\\
0 & 0 & 0 & -2
\end{array}\right)}{2--2}=\left(\begin{array}{cccc}
1 & 0 & 0 & 0\\
0 & \frac{1}{2} & \frac{1}{2} & 0\\
0 & \frac{1}{2} & \frac{1}{2} & 0\\
0 & 0 & 0 & 1
\end{array}\right)\\
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
P_{2} & =\phi_{2}(T)=\stackrel[i\neq k]{}{\prod}\frac{\left(\begin{array}{cccc}
2 & 0 & 0 & 0\\
0 & 0 & 2 & 0\\
0 & 2 & 0 & 0\\
0 & 0 & 0 & 2
\end{array}\right)-\lambda_{k}\mathbb{I}_{4\times4}}{\lambda_{2}-\lambda_{k}}=\frac{\left(\begin{array}{cccc}
