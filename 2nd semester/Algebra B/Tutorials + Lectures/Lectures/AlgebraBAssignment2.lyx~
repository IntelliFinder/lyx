\begin_inset Formula 
\begin{align*}
P_{i}\left(w\right)\underbrace{=}_{w\in\stackrel[k\neq i]{}{\sum}ImP_{k}}P_{i}\left(\stackrel[k\neq i]{}{\sum}w_{k}\right)\underbrace{\Rightarrow}_{question2B}w & \in ImP_{i}\Rightarrow w\in\stackrel[k\neq i]{}{\sum}ImP_{k}\bigcap ImP_{i}\\
 & \Rightarrow w=0\Rightarrow P_{i}\left(w\right)=P_{i}\left(\stackrel[k\neq i]{}{\sum}w_{k}\right)\underbrace{=}_{\forall i|P_{i}(0)=0}0\\
\end{align*}

