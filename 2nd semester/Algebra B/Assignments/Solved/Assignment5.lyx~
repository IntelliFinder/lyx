\]

\end_inset


\begin_inset Formula 
\[
||v-\stackrel[j=1]{m}{\sum}\beta_{j}v_{j}||=||\stackrel[i=1]{n}{\sum}\alpha_{i}v_{i}-\stackrel[j=1]{m}{\sum}\beta_{j}u_{j}||=||\stackrel[i=1]{m}{\sum}\left(\alpha_{i}-\beta_{i}\right)v_{i}+\stackrel[j=m+1]{n}{\sum}\alpha_{j}u_{j}||
\]

\end_inset


\begin_inset Formula 
\[
\underbrace{=}_{Pythogaras's\,theorem}\stackrel[i=1]{m}{\sum}||\left(\alpha_{i}-\beta_{i}\right)v_{i}||+\stackrel[j=m+1]{n}{\sum}||\alpha_{j}u_{j}||\underbrace{=}_{ortho.\,basis}\stackrel[i=1]{m}{\sum}\left|\left(\alpha_{i}-\beta_{i}\right)\right|^{2}+\stackrel[i=m+1]{n}{\sum}\left|\left\langle v,u_{i}\right\rangle \right|^{2}
\]

\end_inset


