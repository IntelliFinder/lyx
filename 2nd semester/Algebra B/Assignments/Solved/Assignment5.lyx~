\begin_layout Standard
\begin_inset Formula 
\[
A\left(U\cap W\right)=span\left\{ B_{V^{*}}\backslash\left\{ f_{i},...,f_{j}\right\} \right\} =span\left\{ B_{V^{*}}\backslash\left\{ f_{i},...,f_{j},f_{u_{1}}...,f_{u_{l}}\right\} \right\} \cup span\left\{ B_{V^{*}}\backslash\left\{ f_{i},...,f_{j},f_{w_{1}}...,f_{w_{g}}\right\} \right\} =A\left(U\right)+A\left(W\right)
\]

\end_inset


