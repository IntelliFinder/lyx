\begin_layout Standard
צ.ל.
 
\begin_inset Formula $\forall v\in V\,:\,||v+iT\left(v\right)||=||v-iT\left(v\right)||$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
||v+iT\left(v\right)||^{2}=\left\langle v+iT\left(v\right),v+iT\left(v\right)\right\rangle =\left\langle v,v+iT\left(v\right)\right\rangle +\left\langle iT\left(v\right),v+iT\left(v\right)\right\rangle =\left\langle v,v\right\rangle +\left\langle v,iT\left(v\right)\right\rangle +\left\langle iT\left(v\right),v\right\rangle +\left\langle iT\left(v\right),iT\left(v\right)\right\rangle 
\]

\end_inset


\begin_inset Formula 
\[
=\left\langle v,v\right\rangle +-i\left\langle v,T\left(v\right)\right\rangle +i\left\langle T\left(v\right),v\right\rangle +i^{2}\left\langle T\left(v\right),T\left(v\right)\right\rangle \underbrace{=}_{\left\langle v,T\left(v\right)\right\rangle =\left\langle T^{*}\left(v\right),v\right\rangle \underbrace{=}_{T^{*}=T}\left\langle T\left(v\right),v\right\rangle }\left\langle v,v\right\rangle -\left\langle T\left(v\right),T\left(v\right)\right\rangle 
\]

\end_inset


\begin_inset Formula 
\[
||v-iT\left(v\right)||^{2}=\left\langle v-iT\left(v\right),v-iT\left(v\right)\right\rangle =\left\langle v,v-iT\left(v\right)\right\rangle +\left\langle -iT\left(v\right),v-iT\left(v\right)\right\rangle 
\]

\end_inset


\begin_inset Formula 
\[
=\left\langle v,v\right\rangle +\left\langle v,-iT\left(v\right)\right\rangle +\left\langle -iT\left(v\right),v\right\rangle +\left\langle -iT\left(v\right),-iT\left(v\right)\right\rangle =\left\langle v,v\right\rangle -\left\langle T\left(v\right),T\left(v\right)\right\rangle 
\]

\end_inset


\end_layout

