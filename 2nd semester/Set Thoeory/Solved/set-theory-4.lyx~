\begin_layout Enumerate
רפלקסיביות- עבור 
\begin_inset Formula $k=1\in\mathbb{N}$
\end_inset

 מתקיים 
\begin_inset Formula $x=x^{1}$
\end_inset

.
 לכן מתקיים 
\begin_inset Formula $x\leq x$
\end_inset

.
\end_layout

\begin_layout Enumerate
אנטי-סימטריות- נניח 
\begin_inset Formula $x\leq y$
\end_inset

 וגם 
\begin_inset Formula $y\leq x$
\end_inset

.
 אז קיימים 
\begin_inset Formula $k_{1},k_{2}\in\mathbb{N}$
\end_inset

 כך ש-
\begin_inset Formula $y=x^{k_{1}}$
\end_inset

 וגם 
\begin_inset Formula $x=y^{k_{2}}$
\end_inset

.
 אז 
\begin_inset Formula $y=y^{k_{2}^{k_{1}}}=y^{k_{1}\times k_{2}}$
\end_inset

 אזי 
\begin_inset Formula $k_{1}\times k_{2}=1$
\end_inset

 מאחר ושניהם טבעיים מתקיים 
\begin_inset Formula $k_{1}=k_{2}=1$
\end_inset

.
 אזי 
\begin_inset Formula $x=y$
\end_inset

.
\end_layout

\begin_layout Enumerate
טרנזיטיביות- נניח 
\begin_inset Formula $x\leq y$
\end_inset

 וגם 
\begin_inset Formula $y\leq z$
\end_inset

 .
 אזי 
\begin_inset Formula $y=x^{k_{1}}$
\end_inset

 וגם 
\begin_inset Formula $z=y^{k_{2}}$
\end_inset

, עבור 
\begin_inset Formula $k_{1},k_{2}\in\mathbb{N}$
\end_inset

.
 אזי 
\begin_inset Formula $z=x^{k_{1}\times k_{2}}$
\end_inset

.
 אזי עבור 
\begin_inset Formula $k=k_{1}\times k_{2}\in\mathbb{N}$
\end_inset

 מתקיים 
\begin_inset Formula $z=x^{k}$
\end_inset

 כלומר 
\begin_inset Formula $x\leq z$
\end_inset

.
\end_layout

